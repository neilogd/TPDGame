{
	"resources" : [
		{
			"type"			: "ScnTexture",
			"name"			: "particle_texture",

			"source"		: "Content/Textures/particle0.png",

			"format" : "R8G8B8A8"
		},

		{
			"type" : "ScnShader",
			"name" : "particle_shader",

			"sources" 		: {
				"GLSL_330" : "Content/Engine/particle.glsl",
				"GLSL_ES_100" : "Content/Engine/particle.glsl"
			},

			"@(android)" : {
				"sources" 		: {
					"GLSL_ES_100" : "Content/Engine/particle.glsl"
				}
			},

			"includepermutations" : [
				"MESH_STATIC_2D",
				"PASS_MAIN",
				"LIGHTING_NONE"
			],

			"entrypoints"		: {
				"vertex" : "vertexMain",
				"pixel" : "pixelTexturedMain"
			}
		},

		{
			"type"			: "ScnMaterial",
			"name"			: "material",

			// Shader
			"shader"		: "$(ScnShader:this.particle_shader)",

			// Textures
			"textures"		: {
				"aDiffuseTex"	: "$(ScnTexture:this.particle_texture)"
			},

			// Samplers
			"samplers"		: {
				"aDiffuseTex"	: {
					"addressu" : "clamp",
					"addressv" : "clamp",
					"minfilter" : "linear",
					"magfilter" : "linear"
				}
			},

			// New render state.
			"renderstate" : {
				"blendstate" : {
					"rendertarget" : [
						{
							"enable" : true,
							"srcblend" : "srcalpha",
							"destblend" : "one",
							"blendop" : "add",
							"srcblendalpha" : "srcalpha",
							"destblendalpha" : "one",
							"blendopalpha" : "add",
							"writemask" : 15
						}
					]
				},

				"depthstencilstate" : {
					"depthtestenable" : false,
					"depthwriteenable" : false
				},

				"rasteriserstate" : {
					"fillmode" : "solid",
					"cullmode" : "none"
				}
			}
		}
	]
}
